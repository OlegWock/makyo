{
  "name": "katuko-app",
  "type": "module",
  "scripts": {
    "server": "KATUKO_API_TOKEN=testtoken bun --watch run server/index.ts",
    "client": "bunx vite --config client/vite.config.ts",
    "client:build": "bunx tsc --project client/tsconfig.json && bunx --bun vite --config client/vite.config.ts build",
    "client:preview": "bunx --bun vite --config client/vite.config.ts preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "scaffold": "bunx --bun hygen",
    "drizzle:schema": "bunx drizzle-kit generate:sqlite",
    "drizzle:migrate": "bun run ./server/db/migrate.ts",
    "drizzle:seed": "bun run ./server/db/seed.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.6",
    "@hono/zod-openapi": "^0.11.0",
    "@hono/zod-validator": "^0.2.1",
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@scalar/hono-api-reference": "^0.5.3",
    "@tanstack/react-query": "^5.29.2",
    "clsx": "^2.1.0",
    "drizzle-orm": "^0.30.8",
    "framer-motion": "^11.1.7",
    "highlight.js": "^11.9.0",
    "hono": "^4.2.5",
    "immer": "^10.0.4",
    "jotai": "^2.8.0",
    "markdown-to-jsx": "^7.4.7",
    "ollama": "^0.5.0",
    "openai": "^4.38.2",
    "react": "^19.0.0-beta-94eed63c49-20240425",
    "react-dom": "^19.0.0-beta-94eed63c49-20240425",
    "react-error-boundary": "^4.0.13",
    "react-icons": "^5.1.0",
    "react-spinners": "^0.13.8",
    "react-use-motion-measure": "^3.0.0",
    "sass": "^1.75.0",
    "use-immer": "^0.9.0",
    "uuid": "^9.0.1",
    "vite-tsconfig-paths": "^4.3.2",
    "wouter": "^3.1.2",
    "zod": "^3.22.5"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/bun": "latest",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "drizzle-kit": "^0.20.17",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "hygen": "^6.2.11",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
